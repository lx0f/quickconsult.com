@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<style>
    .auth-card {
        margin: auto;
        background-color: var(--foreground);
        padding: calc(var(--unit) * 4);
        max-width: 500px;
        min-width: 500px;
    }
</style>

<div class="auth-card">
    <h1 class="mb-2">Register</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" class="d-flex flex-column gap-2">
        <div class="form-group">
            <label asp-for="Nric" class="form-label">Nric</label>
            <input asp-for="Nric" class="form-control">
            <span asp-validation-for="Nric" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button style="background-color: var(--primary);" class="btn btn-primary float-end"
                type="submit">Register</button>
        </div>
    </form>
</div>